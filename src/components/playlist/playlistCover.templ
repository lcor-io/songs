package components

import "lcor.io/songs/src/services"

templ PlaylistCover(playlist services.Playlist) {
	<img
		src={ playlist.Images[0].Url }
		width="300"
		height="300"
		class="border-black border-2 hover:shadow-[3px_3px_0px_black] hover:-translate-x-1 hover:-translate-y-1 transition-all cursor-pointer"
		alt={ playlist.Name }
	/>
}
